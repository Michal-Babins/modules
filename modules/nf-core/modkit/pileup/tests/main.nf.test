nextflow_process {

    name "Test Process MODKIT_PILEUP"
    script "../main.nf"
    process "MODKIT_PILEUP"
    tag "modules"
    tag "modules_nfcore"
    tag "modkit"
    tag "modkit_pileup"

    test("modkit_pileup") {

        when {
            process {
                """
                input[0] = [
                    [ id:'test', single_end:false ],
                    [ file('https://github.com/nf-core/test-datasets/raw/modules/data/genomics/sarscov2/illumina/bam/test.paired_end.sorted.bam', checkIfExists: true) ]
                ]
                input[1] = file('https://github.com/nf-core/test-datasets/raw/modules/data/genomics/sarscov2/illumina/bam/test.paired_end.sorted.bam.bai', checkIfExists: true) 
                input[2] = file("test.bed") 
                """
            }
        }

        then {
            assertAll (
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

}